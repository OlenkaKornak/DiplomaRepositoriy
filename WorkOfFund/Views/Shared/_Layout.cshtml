<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fund</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="stylesheet" href="../../Content/Site.css" />
    @*Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        * {
            box-sizing: border-box;
            border: 0px;
            margin: 0px;
        }
        body {
        }
        .body-content {
        }
        .dl-horizontal dt {
        }
        input,
        select,
        textarea {
        }

        .all_body {
            background-color: #F4FFF5;
            height: 100%;
        }

        .up-menu {
            background-color: #0C8524;
            height: 67px;
        }

        .fund-name {
            text-decoration-line: none;
            font-size: 26px;
            color: #D0FACF;
            margin-left: 15px;
            margin-top: 15px;
        }

        .user-name, .logout-ref {
            color: #D0FACF;
            font-size: 18px;
            float: right;
            font-family: 'Roboto';
            margin-right: 10px;
            margin-top: 18px;
        }

        .down-space {
        }

        .side-menu {
            height: 100%;
            width: 180px;
            position: fixed;
            z-index: 1;
            top: 67px;
            left: 0px;
            background-color: #F4FFF5;
            overflow-x: hidden;
            padding-top: 20px;
            display: inline-block;
        }

        .refs-div {
            margin-left: 50px;
        }

        .ref {
            font-size: 20px;
            color: #19371C;
        }

        .side-line {
            border: 1px solid #18BF36;
            margin-top: 180px;
            margin-bottom: 30px;
            margin-left: 20px;
            width: 140px;
        }

        .main-body {
            height: 100%;
            width: 100%;
            position: fixed;
            z-index: 1;
            top: 67px;
            margin-left: 180px;
            background-color: white;
            overflow-x: hidden;
            padding-top: 20px;
            display: inline-block;
        }

    </style>
</head>
<body>
    <div class="all_body">
        <div class="up-menu">
            @Html.ActionLink("Together we can do everything", "Index", "Home", new { area = "" }, new { @class = "fund-name" })
            <a class="logout-ref">Log out</a>
            <a class="user-name">User Name</a>
        </div>
        <div class="down-space">
            <div class="side-menu">
                <div class="refs-div">
                    <br>
                    @Html.ActionLink("Працівники", "Index", "Worker", new { area = "" }, new { @class = "ref", @style = "text-decoration: none;" })
                    <br><br><a class="ref">Children</a><br><br>
                    @Html.ActionLink("Бюджет", "Index", "Budget", new { area = "" }, new { @class = "ref", @style = "text-decoration: none;" })
                    <br><br><a class="ref">Clinics</a><br><br>
                    <a class="ref">Events</a><br><br>
                    <a class="ref">Statistics</a><br><br>
                    <a class="ref">Reports</a><br><br>
                </div>
                <hr class="side-line">
            </div>
            <div class="main-body">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
